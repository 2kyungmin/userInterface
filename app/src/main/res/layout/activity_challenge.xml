<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCB">

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/ic_menu_preferences"
        />


    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="CHALLENGE"
        android:textSize="50sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/titleText"
        android:text="플랭크 5-GO"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/challengeImage"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_below="@id/subtitleText"
        android:src="@drawable/sport" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challengeImage"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="챌린지를 시작하시겠습니까?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageText"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

    <Button
        android:id="@+id/noButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="YES"
        android:textStyle="bold"
        android:backgroundTint="#D93030"/>

    <Button
        android:id="@+id/yesButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="NO"
        android:textStyle="bold"
        android:backgroundTint="#A82C2C"
        android:layout_marginStart="5dp" />

</LinearLayout>

<LinearLayout
android:id="@+id/menuBar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:orientation="horizontal"
android:gravity="center">

<TextView
    android:layout_width="0dp"
    android:layout_height="90dp"
    android:layout_weight="1"
    android:gravity="center"
    android:text="🗨️ 커뮤니티"
    android:textSize="20sp"
    />

<TextView
    android:layout_width="0dp"
    android:layout_height="90dp"
    android:layout_weight="1"
    android:gravity="center"
    android:text="🏆 내챌린지"
    android:textSize="20sp"
    />

<TextView
    android:layout_width="0dp"
    android:layout_height="90dp"
    android:layout_weight="1"
    android:gravity="center"
    android:text="📅 달력"
    android:textSize="20sp"
    />
</LinearLayout>
    </RelativeLayout>